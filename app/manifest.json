{
    "manifest_version": 2,
    "name": "Dropdown Filter",
    "description": "ドロップダウンメニューを素早く選択できるようになります",
    "version": "0.2.4",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "optional_permissions": [
      "http://*/",
      "https://*/"
    ],
    "background": {
      "scripts": [
        "scripts/background.js"
      ]
    },
    "browser_action": {
    }
  }