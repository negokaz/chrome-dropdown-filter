{
    "manifest_version": 2,
    "name": "Selectize",
    "description": "セレクトボックスを検索できるようにします",
    "version": "0.2.1",
    "permissions": [
      "storage",
      "activeTab",
      "tabs"
    ],
    "optional_permissions": [
      "http://*/",
      "https://*/"
    ],
    "background": {
      "scripts": [
        "scripts/background.js"
      ]
    },
    "browser_action": {
    }
  }